<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:src="@drawable/taxi"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:textColor="#000000"
            android:text="Служба такси – услуга по доставке людей в определенный пункт назначения. В связи с растущим спросом наш сервис постоянно совершенствуется, предлагая клиентам новые более комфортабельные условия обслуживания." />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:onClick="onClickOrders"
            android:text="заказы" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:onClick="onClickBookings"
            android:text="Бронирования" />

        <Button
            android:id="@+id/CarsId"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:onClick="onClickCars"
            android:text="Машины" />

        <Button
            android:id="@+id/OrdersId"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:onClick="onClick"
            android:text="водители" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>