<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orders">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ptName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:hint="Имя" />

        <EditText
            android:id="@+id/ptSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Фамилия"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ptPatronymic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Отчество"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ptCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Машина"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ptVacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Отпуск"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ptDriver_lic_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="№ водительского удостоверения"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ptDate_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Дата выдачи ВУ"
            android:inputType="textPersonName" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="81dp">

        </ListView>

        <Button
            android:id="@+id/refreshBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRefresh"
            android:text="обновить" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSearch"
            android:text="поиск" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onDelete"
            android:text="удалить" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAdd"
            android:text="добавить" />

        <Button
            android:id="@+id/readBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRead"
            android:text="прочитать" />

        <Button
            android:id="@+id/clearAllBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="очистить" />

        <Button
            android:id="@+id/clearInputBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClearInput"
            android:text="очистить ввод" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>